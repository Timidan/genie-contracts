{
  "name": "genie-contracts",
  "version": "0.2.1",
  "description": "Smart contracts of the Genie",
  "main": "index.js",
  "scripts": {
    "test": "truffle test",
    "build": "truffle compile",
    "compile": "truffle compile",
    "deploy-dev": "truffle migrate --network development",
    "deploy-kovan": "truffle migrate --network kovan",
    "deploy-ropsten": "truffle migrate --network ropsten",
    "deploy-fuse": "truffle migrate --network fuse",
    "deploy-mainnet": "truffle migrate --network mainnet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genie-platform/genie-contracts.git"
  },
  "standard": {
    "env": {
      "mocha": true,
      "truffle/globals": true
    },
    "plugins": [
      "truffle"
    ]
  },
  "author": "genie-platform",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/genie-platform/genie-contracts/issues"
  },
  "homepage": "https://github.com/genie-platform/genie-contracts#readme",
  "dependencies": {
    "@openzeppelin/contracts-ethereum-package": "^2.5.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "openzeppelin-solidity": "^3.0.0",
    "truffle": "^5.1.23",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "devDependencies": {
    "eslint-plugin-truffle": "^0.3.1",
    "truffle-assertions": "^0.9.2"
  }
}
